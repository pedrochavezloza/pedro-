{
  "name": "about",
  "version": "1.0.0",
  "description": "Project for creating simple about pages.",
  "main": "index.html",
  "scripts": {
    "git:fetch": "git fetch --prune --tags",
    "git:submodules": "git submodule update --init --recursive",
    "lint": "npm run lint:all",
    "lint:all": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint .",
    "lint:css": "stylelint 'css/**/*.css'",
    "test": "npm run lint",
    "build": "npm run build:all",
    "build:css": "postcss css/styles/index.css -o css/styles/index.min.css",
    "build:js": "rollup -c",
    "build:icons": "svg-sprite-generate -c img/icons.csv -o img/icons.svg",
    "build:all": "npm run build:icons && npm run build:css && npm run build:js",
    "postinstall": "npm run git:fetch && npm run git:submodules && npm run build:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shgysk8zer0/about.git"
  },
  "author": "Chris Zuber <shgysk8zer0@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/shgysk8zer0/about/issues"
  },
  "homepage": "https://github.com/shgysk8zer0/about#readme",
  "devDependencies": {
    "cssnano": "^3.10.0",
    "eslint": "^4.2.0",
    "eslint-plugin-async-await": "0.0.0",
    "eslint-plugin-babel": "^4.1.1",
    "postcss": "^6.0.12",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-load-config": "^1.2.0",
    "postcss-plugin": "^1.0.0",
    "postcss-url": "^7.1.2",
    "rollup": "^0.50.0",
    "stylelint": "^8.1.1",
    "stylelint-config-recommended": "^1.0.0",
    "stylelint-config-standard": "^17.0.0",
    "svg-sprite-generator": "0.0.7"
  }
}
